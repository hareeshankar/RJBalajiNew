<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@android:color/black" android:startColor="@android:color/black" />
        </shape></item>
    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@android:color/black" android:startColor="@android:color/black" />
        </shape></item>
    <item android:state_enabled="true"><shape>
            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
        </shape></item>

</selector>