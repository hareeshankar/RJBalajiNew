        <FrameLayout
            android:id="@+id/fragmant_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <include layout="@layout/left_drawer" />

</android.support.v4.widget.DrawerLayout>